// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model products {
  id    Int   @id   @unique
  name  String 
  brand String
  price Float
  imageSrc  String
  rating  Float
  description String
  reviews Json
  sizes Json
  product_type String
  quantity Int 
}

model members {
  id Int @id 
  name String
  role String
  instagram String
  linkedin String
  github String
  image String
}

model form{
  id Int @id @default(autoincrement())
  name String
  email String
  message String
}